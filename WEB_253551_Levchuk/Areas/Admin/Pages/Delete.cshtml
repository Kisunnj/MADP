@page
@model WEB_253551_Levchuk.Areas.Admin.Pages.DeleteModel
@{
    ViewData["Title"] = "Удалить блюдо";
}

<h1>@ViewData["Title"]</h1>

<h3>Вы уверены, что хотите удалить это блюдо?</h3>
<div>
    <h4>@Model.Dish?.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Название</dt>
        <dd class="col-sm-9">@Model.Dish?.Name</dd>

        <dt class="col-sm-3">Описание</dt>
        <dd class="col-sm-9">@Model.Dish?.Description</dd>

        <dt class="col-sm-3">Калории</dt>
        <dd class="col-sm-9">@Model.Dish?.Calories</dd>

        <dt class="col-sm-3">Категория</dt>
        <dd class="col-sm-9">@Model.Dish?.Category?.Name</dd>

        @if (!string.IsNullOrEmpty(Model.Dish?.Image))
        {
            <dt class="col-sm-3">Изображение</dt>
            <dd class="col-sm-9">
                <img src="~/@Model.Dish.Image" alt="@Model.Dish.Name" style="max-width: 200px; max-height: 200px;" />
            </dd>
        }
    </dl>
    
    <form method="post">
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-page="Dishes" class="btn btn-secondary">Отмена</a>
    </form>
</div>

