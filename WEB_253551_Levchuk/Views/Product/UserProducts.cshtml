@model IEnumerable<Product>

@{
    ViewData["Title"] = "Мои товары";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <p>Здесь отображаются товары, добавленные текущим пользователем.</p>
    
    <div class="row mt-4">
        @if (Model.Any())
        {
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card border-primary">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text">
                                <strong>Цена: </strong>@product.Price.ToString("C")
                            </p>
                            <div class="d-flex justify-content-between">
                                <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-info">
                                    Просмотр
                                </a>
                                <button class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Изменить
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    У вас пока нет добавленных товаров.
                </div>
            </div>
        }
    </div>
</div>

