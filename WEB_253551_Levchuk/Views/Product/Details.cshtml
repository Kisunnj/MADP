@model Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <div class="row mt-4">
        <div class="col-md-12">
            <h2>@Model.Name</h2>
            <hr />
            
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body text-center">
                            <i class="fas fa-image fa-10x text-muted"></i>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <h4>Описание</h4>
                    <p>@Model.Description</p>
                    
                    <h4>Категория</h4>
                    <p>@Model.Category</p>
                    
                    <h4>Цена</h4>
                    <p class="display-4 text-success">@Model.Price.ToString("C")</p>
                    
                    <button class="btn btn-success btn-lg" onclick="addToCart(@Model.Id)">
                        <i class="fas fa-cart-plus"></i> Добавить в корзину
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="fas fa-arrow-left"></i> Назад к каталогу
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function addToCart(productId) {
            alert('Товар ' + productId + ' добавлен в корзину!');
        }
    </script>
}

