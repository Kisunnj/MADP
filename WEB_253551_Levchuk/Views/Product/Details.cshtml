@model WEB_253551_Levchuk.Models.Dish
@{
    ViewData["Title"] = Model.Name;
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="~/@Model.Image" class="img-fluid" alt="@Model.Name" />
        }
        else
        {
            <img src="~/images/avatar.png" class="img-fluid" alt="@Model.Name" />
        }
    </div>
    <div class="col-md-6">
        <h2>@Model.Name</h2>
        <p class="lead">@Model.Description</p>
        <dl class="row">
            <dt class="col-sm-4">Калории:</dt>
            <dd class="col-sm-8">@Model.Calories</dd>
            
            <dt class="col-sm-4">Категория:</dt>
            <dd class="col-sm-8">@Model.Category?.Name</dd>
        </dl>
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
            <button class="btn btn-primary">Добавить в корзину</button>
        </div>
    </div>
</div>
