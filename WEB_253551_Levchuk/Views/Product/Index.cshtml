@model WEB_253551_Levchuk.Models.ListModel<WEB_253551_Levchuk.Models.Dish>
@{
    ViewData["Title"] = "Блюда дня";
    var categories = ViewData["categories"] as List<WEB_253551_Levchuk.Models.Category> ?? new List<WEB_253551_Levchuk.Models.Category>();
    var currentCategory = ViewData["currentCategory"] as string;
}

<h1>@ViewData["Title"]</h1>

<!-- Выбор категории -->
<div class="col-2 border-2">
    <ul class="nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" 
               data-bs-toggle="dropdown"
               href="#"
               role="button"
               aria-expanded="false">@(string.IsNullOrEmpty(currentCategory) ? "Все" : categories.FirstOrDefault(c => c.NormalizedName == currentCategory)?.Name ?? "Все")</a>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item" 
                       asp-controller="product"
                       asp-route-category="@null">Все</a>
                </li>
                @foreach (var item in categories)
                {
                    <li>
                        <a class="dropdown-item" 
                           asp-controller="product"
                           asp-route-category="@item.NormalizedName">
                            @item.Name
                        </a>
                    </li>
                }
            </ul>
        </li>
    </ul>
</div>

<!-- Список блюд -->
<div class="row">
    @if (Model != null && Model.Items.Any())
    {
        @foreach (var dish in Model.Items)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(dish.Image))
                    {
                        <img src="~/@dish.Image" class="card-img-top" alt="@dish.Name" />
                    }
                    else
                    {
                        <img src="~/images/avatar.png" class="card-img-top" alt="@dish.Name" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@dish.Name</h5>
                        <p class="card-text">@dish.Description</p>
                        <p class="card-text">
                            <small class="text-muted">Калории: @dish.Calories</small>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">Категория: @dish.Category?.Name</small>
                        </p>
                        <a asp-action="Details" asp-route-id="@dish.Id" class="btn btn-primary">Подробнее</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <p>Блюда не найдены.</p>
        </div>
    }
</div>

<!-- Пагинация -->
@if (Model != null && Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" 
                       asp-action="Index" 
                       asp-route-category="@currentCategory"
                       asp-route-pageNo="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
}
